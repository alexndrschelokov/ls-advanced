.hero {
  height: 100vh;
}

.hero__container {
  display: flex;
  flex-direction: column;
  height: 100%;
}

.hero__header {
  display: flex;
  align-items: center;
  justify-content: space-between;

  padding-top: 64px;
}

.hero__menu {
  margin: 0 20px;
}

.hero__content {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
}

.hero__btns {
  display: flex;
  justify-content: center;
  padding-bottom: 40px;
}