.skill {
  position: relative;
}

.skill__shape {
  width: 200px;
  height: 200px;
  fill: transparent;
  stroke: #5900ec;
  stroke-width: 20px;
}

.skill__title {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);

  font-size: 18px;
  color: #464d62;
  font-weight: 600;
  text-align: center;
  opacity: .5;
}