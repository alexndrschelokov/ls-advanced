.tags {
  display: flex;
  align-items: center;

  flex-wrap: wrap;
}

.tags__item {
  margin-right: 20px;
  margin-bottom: 10px;

  &:last-child {
    margin-right: 0;
  }
}

.tags__link {
  display: inline-block;
  /* padding: 6px 12px; */
  background: #f3f5f9;
  border-radius: 20px;

  line-height: 45px;
  height: 45px;
  padding: 0 15px;

  text-transform: uppercase;
  font-size: 15px;
  color: #464d62;
}